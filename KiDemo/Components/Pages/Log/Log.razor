@page "/log"

<PageTitle>Log</PageTitle>

<div class="chat-container">
	<div class="main-area">
		<div class="mycontainer">
			
			<div class="mycontent">

				<div class="mycolumn">
					<div class="mycolumn-header">Log</div>
					<textarea readonly>@_logContent</textarea>
				</div>
			</div>
		</div>
	</div>
</div>

@inject LogVm ViewModel

@code {
	private string _logContent = string.Empty;

	protected override void OnInitialized()
	{
		_logContent = ViewModel.GetLog();
	}

}