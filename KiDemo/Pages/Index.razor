@page "/"
@using Microsoft.AspNetCore.Components

<h3>Blazor Input Processing</h3>

<div style="display: flex; flex-direction: row; height: 300px;">
	<!-- Left side: Input and Output -->
	<div style="flex: 2; padding-right: 10px;">
		<div>
			<label for="InputText">Input:</label>
			<input type="text" id="InputText" @bind="InputText" style="width: 100%;" />
		</div>
		<div>
			<label for="OutputText">Output:</label>
			<textarea id="OutputText" readonly style="width: 100%; height: 100px;">@OutputText</textarea>
		</div>
		<div>
			<button @onclick="ProcessInput">Process</button>
		</div>
	</div>

	<!-- Right side: MessageList -->
	<div style="flex: 1; border-left: 1px solid #ccc; padding-left: 10px;">
		<MessageList Messages="Messages" />
	</div>
</div>

@code {
	private string InputText { get; set; } = string.Empty;
	private string OutputText { get; set; } = string.Empty;
	private List<string> Messages { get; set; } = new();

	private void ProcessInput()
	{
		// Backend processing logic
		OutputText = $"Processed: {InputText}";
		Messages.Add(OutputText);
	}
}